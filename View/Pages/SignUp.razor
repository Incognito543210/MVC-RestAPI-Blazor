@page "/signup"
@inject UserService UserServ

<div id="signup-page">
    <div class="content">
        <div class="header">
            <h3 class="title">Rejestracja konta</h3>
        </div>
        <EditForm Model="@user" OnValidSubmit="@CreateUser">
            <DataAnnotationsValidator />
            <MudTextField @bind-Value="user.Email" Label="Adres e-mail" For="@(() => user.Email)"></MudTextField>
            <div id="firstname">
                <MudTextField @bind-Value="user.FirstName" Label="Imię" For="@(() => user.FirstName)"></MudTextField>
            </div>
            <div id="lastname">
                <MudTextField @bind-Value="user.LastName" Label="Nazwisko" For="@(() => user.LastName)"></MudTextField>
            </div>
            <div style="clear: both;"></div>
            <MudTextField @bind-Value="user.Username" Label="Nazwa użytkownika" For="@(() => user.Username)"></MudTextField>
            <MudTextField @bind-Value="user.Password" Label="Hasło" For="@(() => user.Password)" Variant="Variant.Text" InputType="@PasswordInput" Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonTestClick" AdornmentAriaLabel="Show Password" />
            @*<MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Style="@($"background:{}; color:{Colors.Grey.Lighten5};")">Zarejestruj się</MudButton>*@
        </EditForm>
        <div class="modal-footer">
            <button class="btn-signup">Zarejestruj się</button>
        </div>
    </div>
</div>

<style>
    #signup-page {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .content {
        width: 70%;
    }

    h3 {
        margin: 0;
        padding: 0;
        font-weight: bolder;
    }

    .btn-signup {
        background-color: rgba( 22, 166, 185 );
        padding: 10px;
        border-radius: 8px;
        font-size: 1.17em;
        color: white;
    }

        .btn-signup:hover {
            background-color: rgba(227, 225, 222);
        }

    .header {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    #firstname {
        padding-right: 10px;
    }

    #lastname {
        padding-left: 10px;
    }

    #firstname, #lastname {
        float: left;
        width: 50%;
    }

</style>

@code {
    UserDto user = new();

    bool isShow;
    InputType PasswordInput = InputType.Password;
    string PasswordInputIcon = Icons.Material.Filled.VisibilityOff;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }

    async Task CreateUser()
    {
        await UserServ.CreateUserAsync(user);
        user = new();
    }

    void ButtonTestClick()
    {
        @if (isShow)
        {
            isShow = false;
            PasswordInputIcon = Icons.Material.Filled.VisibilityOff;
            PasswordInput = InputType.Password;
        }
        else
        {
            isShow = true;
            PasswordInputIcon = Icons.Material.Filled.Visibility;
            PasswordInput = InputType.Text;
        }
    }
}